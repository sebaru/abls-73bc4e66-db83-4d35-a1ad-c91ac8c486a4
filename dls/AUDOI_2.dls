/*------------------------------------------ Définition des bits permanents du module ----------------------------------------*/
/* IO_COMM:      Bit de communication positionné par le thread lui-meme                                                       */
 #define IO_COMM      <-> _WATCHDOG(libelle="Etat communication avec le module Audio AUDOI_2");
 #define MSG_COMM_NOK <-> _MSG(type=danger, libelle="Unité audio AUDOI_2 hors service", notif_sms=no, notif_chat=yes );

/*----------------------------------------------------------------------------------------------------------------------------*/

/*------------------------------------------ Définition des bits locaux au module --------------------------------------------*/
 #define VISU_THREAD  <-> _I(forme="check", libelle="Module AUDIO");  /* VIsuel de l'etat du VISU_THREAD */

/*------------------------------------------------- Logique fonctionnelle ----------------------------------------------------*/

 - IO_COMM -> VISU_THREAD(mode="checked", libelle="AUDOI_2 connecté"); /* Si le thread dit que le THREAD est UP, on l'affiche */
 -/IO_COMM -> MEMSA_DEFAUT, MEMSSP_DANGER,
              VISU_THREAD(mode="unchecked", cligno, libelle="AUDOI_2 déconnecté"),
              MSG_COMM_NOK;

/* Pilotage des bits de remontées */
 - _TRUE -> MEMSSB_VEILLE;

/*----------------------------------------------------------------------------------------------------------------------------*/
